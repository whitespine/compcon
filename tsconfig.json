{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": false,
    "types": [
      "vuetify",
      "electron",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "es2018.promise"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/main.js",
    "src/main/index.js",
    "src/main/index.dev.js",
    "src/store/modules/print.ts",
    "src/store/modules/pilots.js",
    "src/store/modules/index.ts",
    "src/store/modules/datastore.ts",
    "src/store/modules/configs.ts",
    "src/store/modules/compendium.js"
  ],
  "exclude": ["node_modules"],
  "allowJs": true,
  "declaration": false
}
